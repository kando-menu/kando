<div id="kando-menu-properties-area" class="visible">

  <div id="kando-menu-properties-base-settings" class='d-flex flex-column justify-content-center'>
    <div class='d-flex'>
      <button class="btn btn-primary p-0 me-3" id="kando-menu-properties-icon-button"></button>
      <input type="text" class="kando-font fs-1 form-control" id="kando-menu-properties-name" />
    </div>

    <div id="kando-menu-properties-settings-wrapper">
      <div id="kando-menu-properties-menu-settings" class='d-flex flex-column'>

        <label class='d-flex mt-3'>
          <div class="flex-grow-1">
            <div class='kando-font fs-2'>
              {{strings/menuConditions}}
            </div>
            <div class='fs-5'>
              {{strings/menuConditionsHint}}
            </div>
          </div>
          <button class="btn btn-primary py-0 align-self-center" id="kando-menu-properties-condition-button">
            <i class='material-symbols-rounded fs-1 mx-4 inline-icon'>more_horiz</i>
          </button>
        </label>

        <label class='d-flex mt-3'>
          <div class="flex-grow-1">
            <div class='kando-font fs-2'>
              {{strings/menuBehavior}}
            </div>
            <div class='fs-5'>
              {{strings/menuBehaviorHint}}
            </div>
          </div>
          <button class="btn btn-primary py-0 align-self-center" id="kando-menu-properties-advanced-options-button">
            <i class='material-symbols-rounded fs-1 mx-4 inline-icon'>more_horiz</i>
          </button>
        </label>

        <div id="kando-menu-properties-shortcut-picker"></div>

      </div>

      <div id="kando-menu-properties-item-settings" class='d-flex flex-column'></div>
    </div>

    <div class="swirl2 align-self-center my-4 w-100" style="opacity: 0.7;"></div>

    <div id="kando-menu-properties-hint" class="align-self-center text-center kando-font fs-4"></div>

  </div>

  <div id="kando-menu-properties-icon-picker"></div>
  <div id="kando-menu-properties-condition-picker"></div>
  <div id="kando-menu-properties-advanced-options-picker"></div>

</div>