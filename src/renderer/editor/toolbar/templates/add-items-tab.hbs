<!--
  This tab displays a grid of buttons which can be used to add new menu items to the menu.
-->

<div class='h-100 scrollbox mx-2'>
  <div class="scrollbox-content toolbar-button-grid">
    {{#each items}}
      <div>
        <div id="new-item-{{typeName}}" class="d-flex kando-font btn btn-secondary toolbar-item-button">
          <div>
            {{{icon}}}
          </div>
          <div class="align-self-center">
            <div class="name fs-4">{{name}}</div>
            <div class="description fs-6">{{description}}</div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

